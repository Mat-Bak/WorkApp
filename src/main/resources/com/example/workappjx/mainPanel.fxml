<AnchorPane prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workappjx.MainPanel">
   <children>
      <Pane fx:id="mainPanel" prefHeight="400.0" prefWidth="450.0" visible="false">
         <children>
            <Button fx:id="personPanelButton" alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="50.0" mnemonicParsing="false" onAction="#showPersonInfo" prefHeight="100.0" prefWidth="100.0" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/profil.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button layoutX="175.0" layoutY="50.0" mnemonicParsing="false" onAction="#showWorkPanel" prefHeight="100.0" prefWidth="100.0">
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/clock.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button layoutX="325.0" layoutY="50.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0">
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/settings.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="salaryPanelButton" alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="177.0" mnemonicParsing="false" onAction="#showSalaryPanel" prefHeight="100.0" prefWidth="100.0" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/coins.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Pane layoutX="125.0" layoutY="135.0" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </Pane>
      <Pane fx:id="personInfoPanel" prefHeight="400.0" prefWidth="450.0" visible="false">
         <children>
            <Button fx:id="personPanelBack" layoutX="175.0" layoutY="344.0" mnemonicParsing="false" onAction="#personPanelBack" prefHeight="35.0" prefWidth="100.0" text="Back" />
            <Text fx:id="firstNameLabel" layoutX="67.0" layoutY="73.0" strokeType="OUTSIDE" strokeWidth="0.0" text="First Name:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="lastNameLabel" layoutX="67.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="phoneNumberLabel" layoutX="67.0" layoutY="178.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Phone Number:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="peselLabel" layoutX="67.0" layoutY="230.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pesel:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Pane fx:id="workPanel" layoutY="-1.0" prefHeight="414.0" prefWidth="450.0">
         <children>
            <DatePicker fx:id="dateTime" layoutX="36.0" layoutY="23.0" onAction="#showWorkTimeData" onMouseClicked="#getDataTime" prefHeight="35.0" prefWidth="247.0" />
            <Line endX="203.0" layoutX="230.0" layoutY="79.0" startX="-212.0" />
            <Button fx:id="backButton" layoutX="167.0" layoutY="365.0" mnemonicParsing="false" onAction="#workPanelBack" prefHeight="35.0" prefWidth="116.0" text="Back" />
            <Button fx:id="addWorkTimeButton" layoutX="303.0" layoutY="23.0" mnemonicParsing="false" onAction="#createWorkPanel" prefHeight="35.0" prefWidth="116.0" text="Add +" />
            <ScrollPane layoutX="26.0" layoutY="89.0" prefHeight="253.0" prefWidth="395.0">
               <content>
                  <VBox fx:id="workTimeDataPanel" maxHeight="240.0" maxWidth="380.0" prefHeight="240.0" prefWidth="380.0" />
               </content>
            </ScrollPane>
         </children>
      </Pane>
      <Pane fx:id="salaryPanel" layoutX="-6.0" layoutY="-2.0" prefHeight="413.0" prefWidth="456.0" visible="false">
         <children>
            <ComboBox fx:id="monthList" layoutX="188.0" layoutY="40.0" onAction="#summaryOfTheMonth" prefHeight="27.0" prefWidth="215.0" />
            <Text layoutX="76.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Month:">
               <font>
                  <Font size="22.0" />
               </font>
            </Text>
            <Text fx:id="SalaryHours" layoutX="68.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hours:">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <Text fx:id="SalaryBrutto" layoutX="66.0" layoutY="206.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Brutto:">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <Text fx:id="SalaryNetto" layoutX="66.0" layoutY="264.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Netto:">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <Button fx:id="SalaryPanelBack" layoutX="159.0" layoutY="335.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="139.0" text="Back" />
         </children>
      </Pane>
   </children>
