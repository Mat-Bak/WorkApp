import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class MainPanel extends Application {

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage primaryStage) throws Exception {
        FXMLLoader loader = new FXMLLoader(getClass().getResource("MainPanel.fxml"));
        VBox root = loader.load();

        MainPanelController mainPanelController = loader.getController();
        mainPanelController.setStage(primaryStage);

        primaryStage.setTitle("Pierwsze okno");
        primaryStage.setScene(new Scene(root, 300, 200));
        primaryStage.show();
    }
}


import javafx.fxml.FXML;
import javafx.stage.Stage;

public class MainPanelController {

    private Stage primaryStage;

    public void setStage(Stage primaryStage) {
        this.primaryStage = primaryStage;
    }

    @FXML
    private void showText() {
        // Funkcja wywołana po naciśnięciu przycisku w pierwszym oknie
        System.out.println("Tekst wyświetlony w VBox");

        // Przykład uzyskania dostępu do Stage z pierwszego okna
        if (primaryStage != null) {
            // Tutaj możesz używać primaryStage do różnych operacji na pierwszym oknie
            primaryStage.setTitle("Nowy tytuł");
        }
    }

    @FXML
    private void openSecondWindow() {
        // Utwórz obiekt drugiego okna i przekaż referencję do kontrolera pierwszego okna
        SecondWindowController secondWindowController = new SecondWindowController(this);
        secondWindowController.showAndWait();
    }
}


import javafx.fxml.FXML;
import javafx.stage.Modality;
import javafx.stage.Stage;

public class SecondWindowController {

    private Stage stage;
    private MainPanelController mainPanelController;

    public SecondWindowController(MainPanelController mainPanelController) {
        this.mainPanelController = mainPanelController;

        // Inicjalizacja GUI drugiego okna z pliku FXML
        FXMLLoader loader = new FXMLLoader(getClass().getResource("SecondWindow.fxml"));
        loader.setController(this);

        try {
            VBox secondLayout = loader.load();
            stage = new Stage();
            stage.setTitle("Drugie okno");
            stage.setScene(new Scene(secondLayout));

            // Ustawienie okna drugiego jako modalnego (blokującego interakcję z pierwszym oknem)
            stage.initModality(Modality.APPLICATION_MODAL);

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    @FXML
    private void closeAndInvokeFunction() {
        // Zamknij drugie okno
        if (stage != null) {
            stage.close();
        }

        // Wywołaj funkcję z kontrolera pierwszego okna
        mainPanelController.showText();
    }

    public void showAndWait() {
        if (stage != null) {
            stage.showAndWait();
        }
    }
}
